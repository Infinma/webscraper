{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single", {"avoidEscape": true}],
        "no-trailing-spaces": ["error", {"skipBlankLines": true}],
        "no-multiple-empty-lines": ["error"],
        "brace-style": ["error"],
        "object-curly-spacing": ["error", "never"]
    }
}